<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lvAnalyzeResults"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/listview_border_shape"
        android:elevation="16dp"
        android:divider="@color/light_grey"
        android:dividerHeight="1dp"
        tools:listitem="@layout/listview_item"
        android:transcriptMode="alwaysScroll" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnalyze"
            android:text="SCAN"
            android:textSize="20sp"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:cornerRadius="16dp"
            app:elevation="16dp"
            style="@style/Widget.MaterialComponents.Button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:text="CLEAR"
            android:textSize="20sp"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@color/light_smooth_red"
            app:cornerRadius="16dp"
            app:elevation="16dp"
            style="@style/Widget.MaterialComponents.Button"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
