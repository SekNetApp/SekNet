<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <com.google.android.material.divider.MaterialDivider
           android:id="@+id/upperDivider"
           android:layout_width="match_parent"
           android:layout_height="10dp"
           android:layout_margin="16dp"
           android:background="@color/light_red"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toTopOf="@id/portscanTargetLayout"
           />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/portscanTargetLayout"
            android:layout_width="192dp"
            android:layout_height="60dp"
            android:hint="Host"
            android:textColorHint="@color/light_smooth_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/portscanFromLayout"
            app:layout_constraintTop_toBottomOf="@id/upperDivider"
            app:layout_constraintBottom_toTopOf="@id/bottomDivider">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/portscanTargetHost"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@color/light_smooth_red_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/portscanFromLayout"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:hint="From"
            android:textColorHint="@color/light_smooth_red"
            app:layout_constraintStart_toEndOf="@id/portscanTargetLayout"
            app:layout_constraintEnd_toStartOf="@id/portscanToLayout"
            app:layout_constraintTop_toTopOf="@id/upperDivider"
            app:layout_constraintBottom_toBottomOf="@id/bottomDivider">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/portscanFromPort"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@color/light_smooth_red_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/portscanToLayout"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:hint="To"
            android:textColorHint="@color/light_smooth_red"
            app:layout_constraintStart_toEndOf="@id/portscanFromLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/upperDivider"
            app:layout_constraintBottom_toBottomOf="@id/bottomDivider">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/portscanToPort"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@color/light_smooth_red_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="16dp"
        android:background="@color/light_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portscanTargetLayout"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/portscanResultList"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:divider="@color/light_smooth_red"
        android:dividerHeight="1dp"
        tools:listitem="@layout/listview_item"
        android:backgroundTint="@color/light_smooth_red_2"
        android:transcriptMode="alwaysScroll"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/portscanButtonScan"
            android:text="SCAN"
            android:textSize="20sp"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@color/green"
            app:cornerRadius="16dp"
            app:elevation="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/portscanButtonClear"
            android:text="CLEAR"
            android:textSize="20sp"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@color/light_smooth_red"
            app:cornerRadius="16dp"
            app:elevation="16dp"
            style="@style/Widget.MaterialComponents.Button" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>