<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logoSeknet"
        android:src="@mipmap/logo_seknet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        app:dividerColor="@color/light_smooth_red"
        app:layout_constraintTop_toBottomOf="@id/logoSeknet"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBackground1"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@color/light_smooth_red_2"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/homeIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_home_24"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="@id/itemBackground1"
            app:layout_constraintTop_toTopOf="@id/itemBackground1"
            app:layout_constraintBottom_toBottomOf="@id/itemBackground1"
            />

        <TextView
            android:id="@+id/homeTitleText"
            android:text="Inicio"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:layout_constraintStart_toEndOf="@id/homeIcon"
            app:layout_constraintTop_toTopOf="@id/itemBackground1"/>

        <TextView
            android:text="Pantalla principal"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="@id/homeTitleText"
            app:layout_constraintTop_toBottomOf="@id/homeTitleText"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBackground2"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@color/light_smooth_red_2"
        app:layout_constraintTop_toBottomOf="@id/itemBackground1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/infoIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="16dp"
        android:elevation="4dp"
        android:src="@drawable/icon_device_information_24"
        app:layout_constraintStart_toStartOf="@id/itemBackground2"
        app:layout_constraintTop_toTopOf="@id/itemBackground2"
        app:layout_constraintBottom_toBottomOf="@id/itemBackground2"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBackground3"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@color/light_smooth_red_2"
        app:layout_constraintTop_toBottomOf="@id/itemBackground2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/portScanIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="16dp"
        android:elevation="4dp"
        android:src="@drawable/icon_safety_check_24"
        app:layout_constraintStart_toStartOf="@id/itemBackground3"
        app:layout_constraintTop_toTopOf="@id/itemBackground3"
        app:layout_constraintBottom_toBottomOf="@id/itemBackground3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBackground4"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@color/light_smooth_red_2"
        app:layout_constraintTop_toBottomOf="@id/itemBackground3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/analisisIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="16dp"
        android:elevation="4dp"
        android:src="@drawable/icon_wifi_tethering_24"
        app:layout_constraintStart_toStartOf="@id/itemBackground4"
        app:layout_constraintTop_toTopOf="@id/itemBackground4"
        app:layout_constraintBottom_toBottomOf="@id/itemBackground4"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemBackground5"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:background="@color/light_smooth_red_2"
        app:layout_constraintTop_toBottomOf="@id/itemBackground4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/speedtestIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="16dp"
        android:elevation="4dp"
        android:src="@drawable/icon_network_check_24"
        app:layout_constraintStart_toStartOf="@id/itemBackground5"
        app:layout_constraintTop_toTopOf="@id/itemBackground5"
        app:layout_constraintBottom_toBottomOf="@id/itemBackground5"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/dividerBottom"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"
        app:dividerColor="@color/light_smooth_red"
        app:layout_constraintTop_toBottomOf="@id/itemBackground5"
        app:layout_constraintStart_toStartOf="parent"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>

